{
  "name": "backend-fstack-dapp-template",
  "version": "1.0.0",
  "description": "Backend for the Full Stack Dapp Template",
  "main": "index.js",
  "bin": {
    "backend-fstack-dapp-template": "api.js"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --recursive tests/",
    "lint": "eslint -c .eslintrc config utils api users email storage subscriptions",
    "dev": "nodemon lib/index.js --exec babel-node",
    "start": "NODE_ENV='production' node ./node_modules/better-npm-run start-api"
  },
  "betterScripts": {
    "start-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "LOGGER_TAG": "api",
        "ADMIN_PORT": 8630,
        "COMMAND_RUN": true
      }
    }
  },
  "keywords": [
    "stripe",
    "express",
    "node"
  ],
  "author": "Ramon Recuero",
  "license": "ISC",
  "dependencies": {
    "async": "^2.6.1",
    "babel-register": "^6.26.0",
    "babel-plugin-import": "^1.9.1",
    "babel-preset-env": "^1.7.0",
    "better-npm-run": "^0.1.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "config": "^2.0.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-winston": "^3.0.0",
    "lodash": "^4.17.11",
    "mandrill-api": "^1.0.45",
    "mongo-sanitize": "^1.0.0",
    "mongodb": "^3.1.6",
    "sha256": "^0.2.0",
    "superagent": "^4.0.0-beta.5",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "mocha": "^5.2.0"
  }
}
